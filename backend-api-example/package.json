{
  "name": "softcodes-stripe-api",
  "version": "1.0.0",
  "description": "Backend API for Softcodes Stripe integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "stripe": "^14.21.0",
    "svix": "^1.76.1"
  },
  "devDependencies": {
    "jest": "^30.1.1",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test-vscode-auth-mock.js"
    ],
    "testPathIgnorePatterns": [
      "test-stripe-integration.js",
      "test-full-integration.js",
      "test-starter-plan.js",
      "test-clerk-integration.js",
      "test-vscode-auth.js"
    ]
  },
  "keywords": [
    "stripe",
    "payments",
    "supabase",
    "express",
    "api"
  ],
  "author": "Softcodes",
  "license": "MIT"
}
